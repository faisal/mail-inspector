<p style="color: green"><%= notice %></p>

<h1>Addresses</h1>

<table id="addresses">
  <thead>
    <th>
      <td>Address</td><td>Count</td>
    </th>
  </thead>
  <tbody>
    <% @addresses.sort_by { |addr| addr.messages.count }.reverse.each do |address| %>
      <%= render address %>
    <% end %>
  </tbody>
</div>
